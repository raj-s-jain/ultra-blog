<h1 align="center">Login</h1>

<%= form_for( :session , :html => {:class => "form-horizontal", :role => "form"}, url: login_path) do |form| %>
  
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :email %>
    </div>
    <div class="col-sm-10">
      <%= form.email_field :email, :class=> "form-control",:placeholder=>"Enter Email", :autofocus=> "true" %>
    </div>
  </div>
  <div class="form-group">
    <div class="control-label col-sm-2">
      <%= form.label :password %>
    </div>
    <div class="col-sm-10"> 
      <%= form.password_field :password,:class=> "form-control",:placeholder=>"Enter Password", :autofocus=> "true" %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= form.submit "Log in ", :class=> "btn btn-primary btn-large" %>
    </div>
  </div>
<% end %>
  <div class="col-xs-4 col-xs-offset-5">
    <%= link_to "[ Cancel and Back to All Articles ]", articles_path %>
  </div>