<%= render 'shared/errors', obj: @article %>
<div class="row">
  <div class="col-xs-12">
    <%= form_for(@article, :html => {:class => "form-horizontal", :role => "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :title %>
        </div>
        <div class="col-sm-10"> 
          <%= form.text_field :title,:class=> "form-control",:placeholder=>"Title of the Article", :autofocus=> "true" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :description %>
        </div>
        <div class="col-sm-10">
          <%= form.text_area :description, :class=> "form-control",:placeholder=>"Body of the Article",:rows => "10", :autofocus=> "true" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit :Create, :class=> "btn btn-primary btn-large" %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-5">
      <%= link_to "[ Cancel and Back to All Articles ]", articles_path %>
    </div>
  </div>
</div>