<h2 align="center">Title: <%= @article.title %></h2>
<div class="well col-xs-8 col-xs-offset-2">
  <ul class="listing">
    <div class="row center">
      <div class = "col-md-4 col-md-offset-4 ">
        <li>Created by:</li>
        <li><%= link_to gravatar_for(@article.user), user_path(@article.user) %></li>
        <li class="article-title">
          <%= link_to @article.user.username, user_path(@article.user) %>
        </li>
          <li><small>
            <%= @article.user.articles.count if @article.user.articles %>
            <%=  "article" if @article.user.articles.count==1 %>
            <%=  "articles" if @article.user.articles.count!=1 %>
          </li></small>
      </div>
    </div>
  </ul> 
  <h4 class="center description"><strong>Description:</strong></h4>
  <hr>
  <%= simple_format(@article.description) %>
  <div class="article-actions">
    <% if logged_in? && current_user == @article.user %>
      <%= link_to "Edit Article", edit_article_path(@article),class:"btn btn-xs btn-primary" %>
      <%= link_to "Delete This Article", article_path(@article), 
                                          method: :delete, 
                                          data: {confirm: "Are you sure?"},
                                          class:"btn btn-xs btn-danger" %>
    <% end %>
    <%= link_to "View All Articles", 
                articles_path,
                class:"btn btn-xs btn-success" %>
  </div>
</div>


