<h1 align="center">All Bloggers</h1>
  <%=  will_paginate %>
  <% @users.each do |user| %>
      <ul class="listing">
        <div class="row">
          <div class = "well col-md-4 col-md-offset-4">
            <li><%= link_to gravatar_for(user), user_path(user) %></li>
            <li class="article-title">
              <%= link_to user.username, user_path(user) %>
            </li>
              <li><small>
                <%= user.articles.count if user.articles %>
                <%=  "article" if user.articles.count==1 %>
                <%=  "articles" if user.articles.count!=1 %>
              </li></small>
          </div>
        </div>
      </ul> 
    <% end %>
  <%=  will_paginate %>
  