<%= render 'shared/errors', obj: @user %>

<div class="row">
  <div class="col-xs-12">
    <%= form_for(@user, :html => {:class => "form-horizontal", :role => "form"}) do |form| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :username %>
        </div>
        <div class="col-sm-10"> 
          <%= form.text_field :username,:class=> "form-control",:placeholder=>"Enter Username", :autofocus=> "true" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :email %>
        </div>
        <div class="col-sm-10">
          <%= form.email_field :email, :class=> "form-control",:placeholder=>"Enter Email", :autofocus=> "true" %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= form.label :password %>
        </div>
        <div class="col-sm-10"> 
          <%= form.password_field :password,:class=> "form-control",:placeholder=>"Enter Password", :autofocus=> "true" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
          <%= form.submit(@user.new_record? ? "Sign Up" : "Update Account", :class=> "btn btn-primary btn-large") %>
        </div>
      </div>
    <% end %>
    <div class="col-xs-4 col-xs-offset-5">
      <%= link_to "[ Cancel and Back to All Articles ]", articles_path %>
    </div>
  </div>
</div>